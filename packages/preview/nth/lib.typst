#let nth(ordinal_num) = {
  let ordinal_str = str(ordinal_num)
  if ordinal_str.last() == "1" {
    show: ordinal_str + "st"
  }
  else if ordinal_str.last() == "2" {
    show: ordinal_str + "nd"
  }
  else if ordinal_str.last() == "3" {
    show: ordinal_str + "rd"
  }
  else {
    show: ordinal_str + "th"
  }
}
