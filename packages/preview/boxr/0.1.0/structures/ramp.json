{
  "variables": ["height", "width", "depth", "tab_size"],
  "width": "width + height * 2",
  "height": "depth + height + hyp(height, depth) + tab_size",
  "offset_x": "",
  "offset_y": "height + tab_size - depth",
  "root": {
    "type": "box",
    "id": 0,
    "width": "width",
    "height": "hyp(height, depth)",
    "children": {
      "right": "tab|tab_size|tab_size",
      "left": "tab|tab_size|tab_size",
      "top": {
        "type": "box",
        "id": 1,
        "size": "height",
        "children": {
          "left": "tab|tab_size|tab_size",
          "right": "tab|tab_size|tab_size",
          "top": "tab|tab_size|tab_size"
        }
      },
      "bottom": {
        "type": "box",
        "id": 2,
        "size": "depth",
        "children": {
          "right": {
            "type": "triangle_right",
            "size": "height"
          },
          "left": {
            "type": "triangle_left",
            "size": "height"
          }
        }
      }
    }
  }
}
