#let zhlorem(count) = {
  // count: 生成的字符数量
  if type(count) != int or count <= 0 {
    // 如果 count 无效，返回一段默认文本或空字符串
    return default-chinese-text.first() // 或者返回 ""
  }

  let result = ""
  let current-len = 0
  let source-text-joined = default-chinese-text.join("")
  let source-clusters = source-text-joined.clusters()
  let source-len = source-clusters.len()

  if source-len == 0 {
    return "" // 如果源文本为空，直接返回空
  }

  while current-len < count {
    // 从 source_clusters 中按需取字符，循环使用
    let cluster_to_add = source-clusters.at(calc.rem(current-len, source-len))
    result += cluster_to_add
    current-len += 1
  }
  return result
}