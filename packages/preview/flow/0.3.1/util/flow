#!/usr/bin/env zsh

# Wrapper for `typst`.
#
# Use like you would use the `typst` command.
# Has an extra subcommand â€” info, just pass it a filename
# and it'll print JSON metadata supplied in flow's template.

set -euo pipefail
source `dirname $0`/common

mode="$1"
source=`realpath "$2"`
shift 2

args=(
	--input theme=duality
)

if [[ "$source" = $notes/* ]]; then
	args+=(
		--root "$notes"
	)
fi

if [[ "$mode" = info ]]; then
	mode=query
	args+=(
		'<info>'
		--one
		--field value
	)
fi

if [[ "$mode" = query ]]; then
	args+=(
		--input render=false
	)
fi

if [[ "$mode" = html ]]; then
	mode=compile
	args+=(
		--features html
		--input target=html
	)
fi

typst "$mode" "$source" \
	--input "filename=`basename "$source"`" \
	$args \
	"$@"
