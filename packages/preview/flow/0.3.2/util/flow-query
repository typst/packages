#!/usr/bin/env zsh
# Queries the given note files, or *all* notes if none given.
# Prints JSON.
#
# TODO: optimize this by writing my own Typst world so flow can be cached?
set -euo pipefail
here=`dirname $0`
source "$here/common"

cmd=("$here/flow" info)

if [[ ${#@} -gt 0 ]]; then
	for note in "$@"; do
		$cmd "$note"
	done
else
	fd -0 --exclude zero/template '\.typ$' "$notes" \
		| xargs -P `nproc` -0 -n 1 $cmd \
		2>/dev/null
fi
